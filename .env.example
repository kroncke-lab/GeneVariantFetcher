# Tiered Biomedical Extraction Pipeline Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API Keys (choose one or more based on which LLM provider you want to use)
# =============================================================================

# OpenAI API Key (for GPT-4o, GPT-4o-mini, etc.)
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API Key (for Claude models)
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# =============================================================================
# PubMed/NCBI Configuration
# =============================================================================

# Your email address (required by NCBI for API access)
NCBI_EMAIL=your_email@example.com

# NCBI API Key (optional, increases rate limits from 3 to 10 requests/second)
# Get one at: https://www.ncbi.nlm.nih.gov/account/settings/
# NCBI_API_KEY=your-ncbi-api-key-here

# =============================================================================
# Pipeline Configuration
# =============================================================================

# Default models to use for each tier
INTERN_MODEL=gpt-4o-mini
EXTRACTOR_MODEL=gpt-4o

# Alternative: Use Claude models
# INTERN_MODEL=claude-3-haiku-20240307
# EXTRACTOR_MODEL=claude-3-opus-20240229

# Minimum keyword matches required to pass Tier 1
MIN_KEYWORD_MATCHES=2

# Maximum papers to process (useful for testing)
# Leave empty for no limit
MAX_PAPERS_DEFAULT=

# =============================================================================
# Logging Configuration
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (leave empty to log only to console)
# LOG_FILE=pipeline.log

# =============================================================================
# Cost Management
# =============================================================================

# Enable Tier 1 (Keyword Filter) - Free
ENABLE_TIER1=true

# Enable Tier 2 (Intern Filter) - ~$0.0001/paper
ENABLE_TIER2=true

# Enable Tier 3 (Expert Extraction) - ~$0.05/paper
ENABLE_TIER3=true

# =============================================================================
# Advanced Settings
# =============================================================================

# Retry settings for API calls
MAX_RETRIES=3
RETRY_MIN_WAIT=2
RETRY_MAX_WAIT=10

# LLM Temperature (0.0 = deterministic, 1.0 = creative)
INTERN_TEMPERATURE=0.1
EXTRACTOR_TEMPERATURE=0.0

# Maximum tokens for responses
INTERN_MAX_TOKENS=150
EXTRACTOR_MAX_TOKENS=4000
